<div class="small_banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1502134249126-9f3755a50d78?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80);">
<h1>My Listings</h1>
<h5> Make some good bucks with these badass Astros</h5>
</div>


<div class="container">
  <ul>
    <div class="cards">
        <% @astros.each do |astro| %>
          <li>
           <%= link_to astro_path(astro), style:"text-decoration:none; color:black;" do %>
              <div class="card-trip">
                <div class="position-relative">
                <% image_url = cl_image_path astro.photos.first.key if astro.photos.attached? %>
                <% display_pics = ['https://static.vecteezy.com/system/resources/previews/010/257/564/original/comet-glides-with-fire-at-night-vector.jpg', 'https://upload.wikimedia.org/wikipedia/commons/0/0e/Tharsis_and_Valles_Marineris_-_Mars_Orbiter_Mission_%2830055660701%29.png', 'https://cdn.mos.cms.futurecdn.net/zzCKzkAndgXbTKNoKCUqu9-1200-80.jpg', 'https://w0.peakpx.com/wallpaper/344/912/HD-wallpaper-saturn-space-konstantin-yadevich-fantasy-planet-luminos-cosmos-blue.jpg','https://images.unsplash.com/photo-1639921884918-8d28ab2e39a4?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2030&q=80', 'https://images.unsplash.com/photo-1444703686981-a3abbc4d4fe3?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80', 'https://images.unsplash.com/photo-1446941611757-91d2c3bd3d45?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2902&q=80', 'https://images.ctfassets.net/cnu0m8re1exe/31CAgXLmRrvJg4Vw3cs3h2/51bda4639b4d05d8371b588af7d9c95b/shutterstock_1649833612.jpg', 'https://d2r55xnwy6nx47.cloudfront.net/uploads/2018/07/SolarFull_SeanDoran_2880FullwidthLede.jpg', 'https://upload.wikimedia.org/wikipedia/commons/thumb/8/8c/Andromeda_Galaxy_560mm_FL.jpg/800px-Andromeda_Galaxy_560mm_FL.jpg']%>
                  <div class="astro-image" style="background-image: url(<%= astro.photos.attached? ? image_url : display_pics.sample %>)"></div>
                  <div class="listing_tag">
                    <% if astro.user == current_user %>
                      <span class="badge bg-secondary"> My Listing</span>
                    <% end %>
                  </div>
                </div>
                  <div class="card-trip-infos">
                    <div>
                      <h2><%= astro.name %></h2>
                      <p><%= astro.category %></p>
                    </div>
                    <h2 class="card-trip-pricing">â‚¬<%= astro.daily_price %> per day</h2>
                    <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
                  </div>
              </div>
            <% end %>
          </li>
        <% end %>
    </div>
  </ul>
</div>
