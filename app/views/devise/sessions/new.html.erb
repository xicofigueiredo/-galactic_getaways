<body style="background-image: url('https://images.unsplash.com/photo-1612344026448-92fb6300b4e3?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2874&q=80'); background-repeat: no-repeat; background-size: cover; height: 75%vh;">

  <div class="small_container">
    <div class="login_card">
      <h2>Log in</h2>
      <p style="text-align:center;"> Welcome back, we missed you!</p>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions d-flex justify-content-center">
          <%= f.button :submit, "Log in", style: "color:white", class: "d-block btn-flat text-decoration-none"%>

        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>

</body>
